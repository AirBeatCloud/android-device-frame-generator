<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ImageButton
            android:id="@+id/ib_device_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/tv_device_name"
            android:layout_alignParentTop="true"
            android:background="@drawable/thumbnail_button"
            android:scaleType="centerInside"
            android:src="@drawable/galaxy_nexus_thumb"/>

    <TextView
            android:id="@+id/tv_device_name"
            style="@style/DeviceTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_device_size"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-light"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:text="Galaxy Nexus"/>

    <TextView
            android:id="@+id/tv_device_size"
            style="@style/DeviceInfoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_device_resolution"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif-light"
            android:text="4.65&apos; @ 320dpi"/>

    <TextView
            android:id="@+id/tv_device_resolution"
            style="@style/DeviceInfoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif-light"
            android:paddingBottom="16dp"
            android:text="720x1280"/>
</RelativeLayout>